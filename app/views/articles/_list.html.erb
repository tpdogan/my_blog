<div class="articlelist">
  <h2 class="showtitle">All articles</h2>
  <ul>
  <% @articles.reverse_each do |article| %>
    <li class="navlinks"><%= link_to article.title, article %> (<%= link_to article.signature, "#" %>)</li>
  <% end %>
  </ul>
  <h3 class="new_article_link"><%= link_to "WRITE NEW ARTICLE NOW!", new_article_path %></h3>
</div>